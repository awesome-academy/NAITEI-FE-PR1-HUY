mixin topbar
  - let topbarItems = [{"name":'Tài khoản của tôi',"href":"#"},{"name":'Trạng thái đơn hàng',"href":"#"},{"name":'Danh sách ưa thích',"href":"#"},{"name":'Đăng nhập',"href":"#"},{"name":'Đăng ký',"href":"#"}];
  ul.topbar__list.col-lg-7.col-md-12 
    |
    each item in topbarItems
      li.topbar__item
        a(href=item.href)= item.name
  .topbar__search.col-lg-4.col-md-12
    form
      input(type="text", placeholder="Tìm kiếm ở đây")
      button(aria-label="Search button")
        i.bx.bx-search-alt-2

mixin navigation
  - let navItems = [{name:"Trang chủ",href:"../index.html"},{name:"Rượu vang đỏ",href:"#"},{name:"Rượu trắng",href:"#"},{name:"Champange",href:"#"},{name:"Thông tin",href:"./pages/about.html"},{name:"Blog",href:"#"},{name:"Liên hệ",href:"./pages/contact.html"}];
  - let itemCol1 = {title:'Rượu ngoại',list:[{text:'Rượu chivas',href:'!#'},{text:'Rượu Walker',href:'!#'},{text:'Rượu Quế',href:'!#'},{text:'Rượu Tequilla',href:'!#'},{text:'Rượu Treva',href:'!#'}]};
  form.nav__form(action="")
    input#menuToggle.nav__toggle(type="checkbox") 
  label.nav__icon(for="menuToggle") 
    |
    i.bx.bx-list-ul
  ul.nav__menu.col-lg-10
    each item in navItems 
      - let check = item.name.toString() == "Rượu vang đỏ";
      if !check
        li.nav__menu__item 
          |
          a(href=item.href)= item.name
      else
        li.nav__menu__item 
          |
          label.nav__dropdown__icon(for="wineToggle")= item.name
          input#wineToggle.nav__dropdown__toggle(type="checkbox")
          nav.nav__dropdown.nav__dropdown__container
            .nav__dropdown__content
              .nav__dropdown__box
                +navCol(itemCol1)
              .nav__dropdown__box
                +navCol(itemCol1) 
              .nav__dropdown__box
                +navCol(itemCol1)
              .nav__dropdown__box
                .nav__dropdown__img 
                  |
                  img.img-fluid(src="../../../assets/gallery-2.jpg", alt="gallery-img")

mixin navCol(obj)
  h3.nav__dropdown__head= obj.title
  ul.nav__dropdown__col
    each item in obj.list
      li.nav__dropdown__link 
        |
        a(href=item.href)= item.text

mixin button(obj)
  if obj.text
    button.btn(class=obj.class)= obj.text
  else
    button.btn(class=obj.class)
      block

    each item in navItems 
      li.nav__menu__item 
        |
        a(href=item.href)= item.name

mixin specialProduct(obj)
  .special__time 
    |
    p.special__time__number= obj.num
    p.special__time__unit= obj.unit

mixin sectionHeading(text)
  .intro__heading
    h2.intro__title= text
    img(src="../../../assets/title-dark.png", alt="gioi thieu")

mixin productCard(obj)
  - let isSale = obj.isSale != null;
  .product__card 
    |
    .product__img 
      |
      if isSale
        .special-sale 
          |
          img.img-fluid(src=obj.img, alt="anh san pham moi")
          span= obj.text
      else
        img.img-fluid(src=obj.img, alt="khong co san pham moi")
      .product__quick 
        |
        .product__quick__box 
          |
          i.bx.bx-heart
          span Yêu thích
        .product__quick__box 
          |
          i.bx.bx-bar-chart
          span So sánh
    .product__info 
      |
      h3.product__name= obj.name
      .product__price 
        |
        span.product__price__main= obj.price
        if obj.discount
          span.product__price--discount= obj.discount
      button.btn.product__btn ADD TO CART

mixin productDisplay(obj)
  section.container-fluid(class=obj.class)
  .container
    +sectionHeading(obj.title)
    .row.gx-5.my-3
      each item in obj.wine 
        .col-lg-3.col-md-4.col-sm-6
          +productCard(item)

mixin blogItem(obj)
  .blog 
    |
    .blog__img 
      |
      img.img-fluid(src=obj.img, alt="")
    h3.blog__title= obj.title
    .blog__info 
      |
      span.blog__info__item= `Đăng bởi ${obj.author}`
      span.blog__info__item= obj.time
      - let comment = `${obj.num} Bình luận`;
      span.blog__info__item= comment
    p.blog__desc= obj.desc
    a.blog__more(href="#") Read more

mixin footerCol(obj)
  h3.footer__head= obj.title
  if block
    block

mixin contactInfo(obj)
  each item in obj.items 
    p.contact__info 
      |
      span.contact__icon(class=item.icon) 
      span.contact__text= item.text

mixin breadcrumb(obj)
  .container-fluid
    .container.my-4 
      |
      .row.gx-5
        ul.breadcrumb__list 
          |
          each item in obj.list
            if item == obj.active
              li.breadcrumb__item.breadcrumb__item--active= item
            else
              li.breadcrumb__item= item
